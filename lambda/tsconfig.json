{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
